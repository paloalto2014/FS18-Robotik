        }
        
        
        NumOut(0, LCD_LINE1,bon[user] ,true);
        switch (bon[user])
        {
          case 0 :  //noch nicht Gespielt
           // OpenGate();//Gibt den Ball aus
             TextOut(0, LCD_LINE1, "spiel Startet" ,true);
            bon[user] = Startgame();
