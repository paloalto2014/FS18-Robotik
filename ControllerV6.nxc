sub OpenGate()  //öffnet das Tor um den Ball rauszulassen
{
  SetSensor(S4, SENSOR_TOUCH);
  OnFwd(OUT_B, 100);
  Wait(500);
  Off(OUT_B);
  Wait(2000);
  OnRev(OUT_B,100);
  until(Sensor(S4)==1);
  Off(OUT_B);
  
}

